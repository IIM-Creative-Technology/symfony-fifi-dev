{% extends 'base.html.twig' %}

{% block title %}All Missions{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div >
    <h1 >All missions âœ…</h1>
    <p> Today: {{ pluralize(missions|length, 'Mission', 'Missions') }} </p>
    <br>

    <br>

    <div class="row">


    {% for mission in missions %}
        <div class="card shadow mb-4 ml-5  col-lg-5">
            <div class="card-header py-8">
                <h6 class="m-0 font-weight-bold text-primary">{{ mission.name }}</h6>
            </div>
            <div class="card-body">
                <p>{{ mission.description }}</p>
                <a href="{{ path('app_mission_show', {id: mission.id}) }}" class="btn btn-primary btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-arrow-right"></i>
                                        </span>
                    <span class="text">See the mission</span>
                </a>

            </div>
            <div class="card-footer">
                <p>{{ mission.priority }}</p>
            </div>
        </div>

    {% endfor %}
    </div>
</div>
{% endblock %}
