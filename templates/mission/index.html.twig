{% extends 'base.html.twig' %}

{% block title %}All Missions{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div >
    <h1 >All missions ✅</h1>
    <p>Il y a {{ pluralize(missions|length, 'Mission', 'Missions') }} à ce jour</p>
    <br>

    <br>
    {% for mission in missions %}
        <article>
            <h2>{{ mission.name }}</h2>
            <p>{{ mission.description }}</p>
            <p>{{ mission.priority }}</p>
            <a href="{{ path('app_mission_show', {id: mission.id}) }}" class="btn btn-primary btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-arrow-right"></i>
                                        </span>
                <span class="text">See the mission</span>
            </a>
        </article>
    {% endfor %}

</div>
{% endblock %}
