{% extends 'base.html.twig' %}

{% block title %}Create Mission{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Creer une mission! </h1
    <button><a href="{{ path('app_missions') }}"> Back to the list</a></button>

    <h2> Create a new mission :</h2>

    {{ form_start(form) }}
    <div>
        {{ form_errors(form) }}
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.Name) }}
        </div>
        <div class="col">
            {{ form_row(form.description) }}
        </div> <div class="col">
            {{ form_row(form.priority) }}
        </div>
        <div class="col">
            {{ form_row(form.execute_date) }}
        </div>
        <div class="col">
            {{ form_row(form.status) }}
        </div>
    </div>

    {{ form_end(form) }}

</div>
{% endblock %}
