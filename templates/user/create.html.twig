{% extends 'base.html.twig' %}

{% block title %}Create Mission{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <button><a href="{{ path('app_missions') }}"> Back to the list</a></button>

        <h2> Create a new mission :</h2>

        {{ form_start(form) }}
        <div>
            {{ form_errors(form) }}
        </div>
        <div class="row">
            <div>
                {{ form_row(form.username) }}
            </div>
            <div class="col">
                {{ form_row(form.intelligence) }}
            </div>
            <div class="col">
                {{ form_row(form.strength) }}
            </div>
            <div class="col">
                {{ form_row(form.speed) }}
            </div>
            <div class="col">
                {{ form_row(form.durability) }}
            </div>

            <div class="col">
                {{ form_row(form.power) }}
            </div>
            <div class="col">
                {{ form_row(form.combat) }}
            </div>
            <div>
                {{ form_row(form.image) }}
            </div>
        </div>

        {{ form_end(form) }}

    </div>
{% endblock %}
